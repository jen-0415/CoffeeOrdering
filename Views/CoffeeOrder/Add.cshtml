@{
    ViewData["Title"] = "New Coffee Order";
}
@model CoffeeOrdering.Models.AddCoffeeOrderViewModel

<div class="container">
    <div class="page-header">
        <h1><span class="coffee-icon"></span> New Coffee Order</h1>
        <p>Craft your perfect cup of coffee</p>
    </div>

    <div class="order-container">
        <form method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">☺️ Customer Name</label>
                    <input type="text" class="form-control" asp-for="CustomerName" placeholder="Enter your name" required />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">☕ Coffee Type</label>
                    <select class="form-select" asp-for="CoffeeType" required>
                        <option value="">Choose your coffee...</option>
                        <option value="Espresso">Espresso - ₱120</option>
                        <option value="Americano">Americano - ₱140</option>
                        <option value="Latte">Latte - ₱180</option>
                        <option value="Cappuccino">Cappuccino - ₱180</option>
                        <option value="Mocha">Mocha - ₱200</option>
                        <option value="Macchiato">Macchiato - ₱160</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">📏 Size</label>
                    <select class="form-select" asp-for="Size" required>
                        <option value="">Choose size...</option>
                        <option value="Small">Small (8oz)</option>
                        <option value="Medium">Medium (12oz) +30%</option>
                        <option value="Large">Large (16oz) +60%</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">🥛 Milk Type</label>
                    <select class="form-select" asp-for="MilkType">
                        <option value="Whole Milk">Whole Milk</option>
                        <option value="Skim Milk">Skim Milk</option>
                        <option value="Oat Milk">Oat Milk</option>
                        <option value="Almond Milk">Almond Milk</option>
                        <option value="Soy Milk">Soy Milk</option>
                        <option value="No Milk">No Milk</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">🍯 Flavor/Syrup</label>
                    <select class="form-select" asp-for="FlavorSyrup">
                        <option value="None">None</option>
                        <option value="Vanilla">Vanilla</option>
                        <option value="Caramel">Caramel</option>
                        <option value="Hazelnut">Hazelnut</option>
                        <option value="Mocha">Mocha</option>
                        <option value="Peppermint">Peppermint</option>
                        <option value="White Chocolate Mocha">White Chocolate Mocha</option>
                    </select>
                </div>
            </div>

            <div class="mb-4">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="WhippedCream" asp-for="WhippedCream" />
                    <label class="form-check-label" for="WhippedCream">🍦 Add Whipped Cream (+₱25)</label>
                </div>
            </div>

            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-primary btn-lg">
                    ☕ Place Order
                </button>
                <a href="@Url.Action("List", "CoffeeOrder")" class="btn btn-secondary btn-lg">Cancel</a>
            </div>
        </form>
    </div>
</div>