@{
    ViewData["Title"] = "Coffee Orders";
}
@model List<CoffeeOrdering.Models.Entities.CoffeeOrder>

<style>
    .coffee-table thead {
        background-color: #3e2723;
        color: #ffffff;
    }

    .coffee-table th {
        border-color: #5d4037;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .coffee-table td {
        vertical-align: middle;
    }

    .coffee-table tbody tr:hover {
        background-color: rgba(109, 76, 65, 0.08);
    }

    .status-pending {
        background-color: rgba(255, 193, 7, 0.15);
    }

    .status-preparing {
        background-color: rgba(0, 123, 255, 0.1);
    }

    .status-ready {
        background-color: rgba(40, 167, 69, 0.15); 
    }

    .status-completed {
        background-color: rgba(108, 117, 125, 0.15);
    }

    .status-cancelled {
        background-color: rgba(220, 53, 69, 0.15);
    }
</style>

<div class="container">
    <div class="page-header d-flex justify-content-between align-items-center flex-wrap">
        <div>
            <h1>Coffee Orders</h1>
            <p>Manage and track all coffee orders</p>
        </div>
        <a href="@Url.Action("Add", "CoffeeOrder")" class="btn btn-success btn-lg">
            + New Order
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive mb-4">
            <table class="table table-hover coffee-table">
                <thead>
                    <tr>
                        <th>Order Date</th>
                        <th>Customer</th>
                        <th>Coffee</th>
                        <th>Size</th>
                        <th>Milk</th>
                        <th>Flavor</th>
                        <th>Extras</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        var rowClass = order.Status.ToLower() switch
                        {
                            "pending" => "status-pending",
                            "preparing" => "status-preparing",
                            "ready" => "status-ready",
                            "completed" => "status-completed",
                            _ => "status-cancelled"
                        };
                        <tr class="@rowClass">
                            <td>@order.OrderDate.ToString("MMM dd, yyyy HH:mm")</td>
                            <td><strong>@order.CustomerName</strong></td>
                            <td>@order.CoffeeType</td>
                            <td>@order.Size</td>
                            <td>@order.MilkType</td>
                            <td>@order.FlavorSyrup</td>
                            <td>
                                @if (order.WhippedCream)
                                {
                                    <span class="badge bg-info">Whipped Cream</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td><strong>₱@order.Price.ToString("F2")</strong></td>
                            <td>
                                @if (order.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">@order.Status</span>
                                }
                                else if (order.Status == "Preparing")
                                {
                                    <span class="badge bg-primary">@order.Status</span>
                                }
                                else if (order.Status == "Ready")
                                {
                                    <span class="badge bg-success">@order.Status</span>
                                }
                                else if (order.Status == "Completed")
                                {
                                    <span class="badge bg-secondary">@order.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@order.Status</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Edit", "CoffeeOrder", new { id = order.Id })"
                                       class="btn btn-sm btn-warning">Edit</a>
                                    <form method="post" asp-action="Delete" asp-controller="CoffeeOrder"
                                          style="display:inline;"
                                          onsubmit="return confirm('Are you sure you want to delete this order?');">
                                        <input type="hidden" name="Id" value="@order.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="alert alert-secondary">
            <strong>Total Orders:</strong> @Model.Count |
            <strong>Total Revenue:</strong> ₱@Model.Sum(o => o.Price).ToString("N2")
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="alert alert-info">
                <h4>No orders yet!</h4>
                <p>Start brewing some happiness by placing your first coffee order.</p>
                <a href="@Url.Action("Add", "CoffeeOrder")" class="btn btn-primary btn-lg mt-3">
                    + Place First Order
                </a>
            </div>
        </div>
    }
</div>
